package com.demo.beans;

public class ServiceArray {

	public static int findMax(int[] arr) {
		int max= arr[0];
		for(int i=1;i<arr.length;i++) {
			if(arr[i]>max)
				max=arr[i];
		}
		return max;
	}

	public static int findMin(int[] arr) {
		int min= arr[0];
		for(int i=1;i<arr.length;i++) {
			if(arr[i]<min)
				min=arr[i];
		}
		return min;
	}

	public static int FindSecondMax(int[] arr) {
		int max=arr[0];
		int smax=0;
		for(int i=1;i<arr.length;i++) {
			if(arr[i]>max) {
				smax=max;
				max=arr[i];
			}
		}
		return smax;
	}

}
